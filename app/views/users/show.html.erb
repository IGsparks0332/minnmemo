<% if current_user.id == @user.id %>
  <div class='userAction'>
      <div class="userAction_edit">
        <%= link_to edit_user_registration_path, :method => :get do %>
          <i class="fas fa-edit">編集</i>
        <% end %>
      </div>
      <div class="userAction_logout">
        <%= link_to destroy_user_session_path, :method => :delete do %>
          <i class="fas fa-edit">ログアウト</i>
        <% end %>
      </div>
  </div>
<% end %>


<div class='usershowPage'>
  <div class='user-show-container'>
    <div class='userInfo'>
      <div class='username'><p class="userInfop">名前:<%= @user.name %></p></div>
      <div class='userid'><p class="userInfop"><%= @user.id %>人目のユーザーです。</p></div>
      <div class='userInfo_selfIntroduction'><p class="userInfop">自己紹介:<%= @user.self_introduction %></p></div>
      <br>
      <% if @user.self_introduction.blank? %>
        <div class="userInfo_selfIntroduction"><p class="userInfop">自己紹介文は設定されていません。</p></div>
      <% end %>
    </div>
  </div>
</div>
